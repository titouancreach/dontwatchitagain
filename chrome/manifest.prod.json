{
  "version": "0.0.1",
  "name": "dont-watch-it-again",
  "manifest_version": 2,
  "description": "Never watch the same episode again",
  "browser_action": {
    "default_title": "Don't watch it again",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [ "contextMenus", "tabs", "storage", "management", "notifications" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
